@using System.Collections
@model IEnumerable<BestAndTrend>


@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    var isAdmin = User.IsInRole("Admin");
}

<section id="trending" class="py-5">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">

                <h3>Trending Products</h3>

                <div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">

                    @foreach (var item in Model)
                    {
                        @foreach (var trend in item.trends)
                        {
                            <div class="col">
                                <div class="product-item">
                                    <span class="badge bg-success position-absolute m-3">-30%</span>
                                    <figure>
                                        <a href="@Url.Action("Details", "TrendingSellings", new { id = trend.ProudId })#ProductView" title="Product Title">
                                            <img src="@Url.Content(@trend.ImagUrl)" alt="@trend.ProudName" class="img-fluid">
                                        </a>
                                    </figure>
                                    <span>@trend.ProudName</span>
                                    <div class="d-flex justify-content-between">
                                        <p><span class="text-dark">$@trend.Price</span><del>$23</del><span class="text-success">-30%</span></p>
                                        <span class="d-flex">
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="btnsFromMe">
                                        @if (isAdmin)
                                        {
                                            <a asp-action="Edit" asp-route-id="@trend.ProudId" class="btn Edit text-white ">Edit</a>
                                            <a asp-action="Details" asp-route-id="@trend.ProudId" class="btn Details text-white">Details</a>
                                            <a asp-action="Delete" asp-route-id="@trend.ProudId" class="btn Delete text-white ">Delete</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }



                   

                </div>
                <!-- / product-grid -->

            </div>
        </div>
    </div>
</section>


