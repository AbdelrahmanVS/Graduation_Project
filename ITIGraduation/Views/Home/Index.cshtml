@using System.Collections
@model IEnumerable<BestAndTrend>


@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    var isAdmin = User.IsInRole("Admin");
}

<section id="trending" class="py-5">
    <div class="container-fluid">
        <h3>Trending Products</h3>


        <div class="row">
            <div class="col-md-12">

                @if (isAdmin)
                {
                    <p>
                        <a asp-controller="Trendingsellings" asp-fragment="ProductView" asp-action="Create" class="btn btn-primary mb-3">+ Add Product</a>
                    </p>
                }


                <div class="product-grid row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">

                    @foreach (var item in Model)
                    {
                        @foreach (var trend in item.trends)
                        {
                            <div class="col">
                                <div class="product-item">
                                    <span class="badge bg-success position-absolute m-3">-30%</span>
                                    <figure>
                                        <a href="@Url.Action("Details", "TrendingSellings", new { id = trend.ProudId })#ProductView" title="Product Title">
                                            <img src="@Url.Content(@trend.ImagUrl)" alt="@trend.ProudName" class="img-fluid">
                                        </a>
                                    </figure>
                                    <span>@trend.ProudName</span>
                                    <div class="d-flex justify-content-between">
                                        <p><span class="text-dark">$@trend.Price</span><del>$23</del><span class="text-success">-30%</span></p>
                                        <span class="d-flex">
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                            <svg width="18" height="18" class="text-warning">
                                                <use xlink:href="#star-solid"></use>
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="btnsFromMe">
                                        @if (isAdmin)
                                        {
                                            <a asp-controller="TrendingSellings"
                                               asp-action="Edit"
                                               asp-route-id="@trend.ProudId"
                                               asp-fragment="ProductView"
                                               class="btn Edit text-white">
                                                Edit
                                            </a>
                                            <a asp-controller="TrendingSellings" asp-action="Details" asp-route-id="@trend.ProudId" asp-fragment="ProductView" class="btn Details text-white">Details</a>
                                            <a asp-controller="TrendingSellings" asp-action="Delete" asp-route-id="@trend.ProudId" asp-fragment="ProductView" class="btn Delete text-white ">Delete</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }



                   

                </div>
                <!-- / product-grid -->

            </div>
        </div>
    </div>
</section>


<section class="py-5 overflow-hidden">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                <div class="section-header d-flex flex-wrap justify-content-between my-5">

                    <h2 class="section-title">Best selling products</h2>

                    <div class="d-flex align-items-center">
                        <a href="/Products/index#ProductView" class="btn-link text-decoration-none">View All Best Products →</a>
                        <div class="swiper-buttons">
                            <button class="swiper-prev products-carousel-prev btn btn-primary">❮</button>
                            <button class="swiper-next products-carousel-next btn btn-primary">❯</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        @if (isAdmin)
        {
            <p>
                <a asp-controller="Products" asp-action="Create" asp-fragment="ProductView" class="btn btn-primary mb-3">+ Add Product</a>
            </p>
        }
        <div class="row">
            <div class="col-md-12">

                <div class="products-carousel swiper">
                   

                    <div class="swiper-wrapper">
                        


                        @foreach (var item in Model)
                        {
                            @foreach (var prod in item.products)
                            {
                                <div class="swiper-slide">
                                    <div class="product-item">
                                        <span class="badge bg-success position-absolute m-3">-30%</span>
                                        <figure>
                                            <a href="@Url.Action("Details", "Products", new { id = prod.ProuductId})#ProductView" title="@prod.ProuductName">
                                                <img src="@Url.Content(prod.ImagUrl)" alt="@prod.ProuductName" class="img-fluid">
                                            </a>
                                        </figure>
                                        <p>@prod.ProuductName</p>
                                        <div class="d-flex justify-content-between">
                                            <p><span class="text-dark">$@prod.Price</span><del>$23</del><span class="text-success">-30%</span></p>
                                            <span class="d-flex">
                                                <svg width="18" height="18" class="text-warning">
                                                    <use xlink:href="#star-solid"></use>
                                                </svg>
                                                <svg width="18" height="18" class="text-warning">
                                                    <use xlink:href="#star-solid"></use>
                                                </svg>
                                                <svg width="18" height="18" class="text-warning">
                                                    <use xlink:href="#star-solid"></use>
                                                </svg>
                                                <svg width="18" height="18" class="text-warning">
                                                    <use xlink:href="#star-solid"></use>
                                                </svg>
                                                <svg width="18" height="18" class="text-warning">
                                                    <use xlink:href="#star-solid"></use>
                                                </svg>
                                            </span>
                                        </div>
                                        <div class="btnsFromMe">
                                            @if (isAdmin)
                                            {
                                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@prod.ProuductId" asp-fragment="ProductView" class="btn Edit text-white ">Edit</a>
                                                <a asp-controller="Products" asp-action="Details" asp-route-id="@prod.ProuductId" asp-fragment="ProductView" class="btn Details text-white">Details</a>
                                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@prod.ProuductId" asp-fragment="ProductView" class="btn Delete text-white ">Delete</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                        }



                        

                    </div>
                </div>
                <!-- / products-carousel -->

            </div>
        </div>
    </div>
</section>



