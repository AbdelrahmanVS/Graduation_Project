@{
    ViewData["Title"] = "Payment Cancelled";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h3 class="card-title mb-0">
                    <i class="fas fa-times-circle"></i> Payment Cancelled
                </h3>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-warning" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4>Payment was cancelled</h4>
                    <p class="text-muted">Your payment has been cancelled and no charges were made.</p>
                    
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> If you experienced any issues, please try again or contact support.
                    </div>
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Payment" asp-action="Index" class="btn btn-primary">Try Again</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>