@model ITIGraduation.Models.PaymentViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ITIGraduation.Models.AppUser> UserManager
@inject SignInManager<ITIGraduation.Models.AppUser> SignInManager

@{
    ViewData["Title"] = "Simple Payment";
    var user = SignInManager.IsSignedIn(User) ? UserManager.GetUserAsync(User).Result : null;
    // Parse cart items from query string
    var itemsRaw = Context.Request.Query["items"].ToString();
    var items = new List<(string name, int quantity, decimal price)>();
    if (!string.IsNullOrEmpty(itemsRaw))
    {
        // items=name1:qty1:price1,name2:qty2:price2
        foreach (var part in itemsRaw.Split(','))
        {
            var segs = part.Split(':');
            if (segs.Length == 3 && decimal.TryParse(segs[2], out var price) && int.TryParse(segs[1], out var qty))
                items.Add((segs[0], qty, price));
        }
    }
}
@if (items.Count > 0)
{
    <div class="alert alert-info mb-4">
        <h5>Order Summary</h5>
        <ul>
            @foreach (var item in items)
            {
                <li>@item.name (x@item.quantity): @item.price.ToString("C")</li>
            }
        </ul>
        <strong>Total: @items.Sum(i => i.price * i.quantity).ToString("C")</strong>
    </div>
}
<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Spark Payment Gateway</h3>
            </div>
            <div class="card-body">
                <form asp-action="CreatePayment" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">Amount (EGP) *</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="1" max="10000" required />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Full Name *</label>
                        <input asp-for="CustomerName" class="form-control" required value="@(Model.CustomerName ?? (user != null ? user.Name : ""))" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerEmail" class="form-label">Email *</label>
                        <input asp-for="CustomerEmail" class="form-control" type="email" required value="@(Model.CustomerEmail ?? (user != null ? user.Email : ""))" />
                        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CustomerPhone" class="form-label">Phone Number *</label>
                        <input asp-for="CustomerPhone" class="form-control" type="tel" required value="@(Model.CustomerPhone ?? (user != null ? user.PhoneNumber : ""))" />
                        <span asp-validation-for="CustomerPhone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description (optional)</label>
                        <textarea asp-for="Description" class="form-control" placeholder="What is this payment for?">@Model.Description</textarea>
                        <small class="text-muted">Optional - leave blank if not needed. If you have multiple items, please review your cart before payment.</small>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">
                             Pay Now
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="mt-3 text-center">
            <small class="text-muted">
                 Secured by Paymob Payment Gateway
            </small>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}