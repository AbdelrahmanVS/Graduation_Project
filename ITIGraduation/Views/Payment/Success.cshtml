@{
    ViewData["Title"] = "Payment Successful";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h3 class="card-title mb-0">
                    <i class="fas fa-check-circle"></i> Payment Successful
                </h3>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h4>Thank you for your payment!</h4>
                    <p class="text-muted">Your transaction has been processed successfully.</p>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.TransactionId))
                    {
                        <div class="alert alert-info">
                            <strong>Transaction ID:</strong> @ViewBag.TransactionId
                        </div>
                    }
                    
                    @if (ViewBag.IsVerified == true)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-shield-alt"></i> Payment verified successfully
                        </div>
                    }
                    else if (ViewBag.IsVerified == false)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> Payment verification pending
                        </div>
                    }
                </div>
                
                <div class="text-center mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                    <a asp-controller="Payment" asp-action="Index" class="btn btn-outline-secondary">Make Another Payment</a>
                </div>
            </div>
        </div>
    </div>
</div>