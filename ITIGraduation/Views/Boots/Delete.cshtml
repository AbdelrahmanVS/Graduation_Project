@model ITIGraduation.Models.Boot

<div class="product_page" id="ProductView">
    @{
        ViewData["Title"] = "Delete Boot";
    }

    <h2>Are you sure you want to delete this boot?</h2>

    <div>
        <h4>@Model.BootName</h4>
        <dl class="row">
            <dt class="col-sm-2">Size</dt>
            <dd class="col-sm-10">@Model.Size</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>

            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">@Model.ImagUrl</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BootId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" asp-fragment="ProductView" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

</div>
