@model ITIGraduation.Models.Boot

<div class="product_page" id="ProductView">
    @{
        ViewData["Title"] = "Edit Boot";
    }

    <h2>Edit Boot</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="BootId" />
        <input type="hidden" asp-for="ImagUrl" /> <!-- نخزن المسار القديم لو ما اتغيرش -->

        <div class="form-group">
            <label asp-for="BootName"></label>
            <input asp-for="BootName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Size"></label>
            <input asp-for="Size" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
        </div>

        <!-- الصورة الحالية -->
        <div class="form-group">
            <label>Current Image</label><br />
            @if (!string.IsNullOrEmpty(Model.ImagUrl))
            {
                <img src="@Url.Content(Model.ImagUrl)" alt="Boot Image" style="max-width:150px;max-height:150px;" />
            }
            else
            {
                <span>No image uploaded</span>
            }
        </div>

        <!-- رفع صورة جديدة -->
        <div class="form-group">
            <label>Upload New Image</label>
            <input type="file" name="ImageFile" class="form-control" onchange="previewImage(event)" />
        </div>

        <!-- preview -->
        <div class="form-group mt-2">
            <img id="preview" src="#" alt="Preview Image" style="max-width:150px; display:none;" />
        </div>

        <button type="submit" class="btn btn-warning">Save Changes</button>
        <a asp-action="Index" asp-fragment="ProductView" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            var output = document.getElementById('preview');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.style.display = 'block';
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
